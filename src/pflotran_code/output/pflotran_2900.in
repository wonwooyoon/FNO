      SURFACE_AREA_VOL_FRAC_POWER 0.66667
      PREFACTOR
        RATE_CONSTANT		  -13.99
	      ACTIVATION_ENERGY	87.6d3
      /
    /
    
    Gypsum
      SURFACE_AREA_FUNCTION VOLUME_FRACTION_RATIO
      SURFACE_AREA_VOL_FRAC_POWER 0.66667
      PREFACTOR
        RATE_CONSTANT 		-2.79d0
	      ACTIVATION_ENERGY 	0.00
      /
    /   
    
    Calcite
      RATE_CONSTANT 1e-9
    /
    
    Pyrite
      SURFACE_AREA_FUNCTION VOLUME_FRACTION_RATIO
