SIMULATION
  SIMULATION_TYPE SUBSURFACE
  
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
    SUBSURFACE_TRANSPORT transport
      MODE GIRT
    /
  /

  CHECKPOINT 
    FORMAT HDF5
    PERIODIC TIME 100 yr
  /

END

SUBSURFACE

REFERENCE_TEMPERATURE 35
NUMERICAL_METHODS flow
  NEWTON_SOLVER
    ITOL_UPDATE 1.0d0
    NO_PRINT_CONVERGENCE
  /
  TIMESTEPPER
    INITIAL_TIMESTEP_SIZE 1.d-5 yr
    MAXIMUM_TIMESTEP_SIZE 1.d0 yr
    MAXIMUM_NUMBER_OF_TIMESTEPS 100000000
  /
/

NUMERICAL_METHODS transport
  NEWTON_SOLVER
    SNES_TYPE NTRDC
    STOL 1e-50
    ATOL 1e-15
    RTOL 1e-9
    MAXIMUM_NUMBER_OF_ITERATIONS 25
    NO_PRINT_CONVERGENCE
  /
  TIMESTEPPER
    INITIAL_TIMESTEP_SIZE 1.d-5 yr
    MAXIMUM_TIMESTEP_SIZE 1.d-2 yr
    MAXIMUM_NUMBER_OF_TIMESTEPS 100000000
  /
/

CHEMISTRY

  ACTIVITY_COEFFICIENTS LAG TIMESTEP

  PRIMARY_SPECIES
    H+
    Ca++
    Na+
    K+
    Mg++
    CO3--
    Cl-
    UO2++
    O2(aq)
    H4(SiO4)
    Fe++
    Al+++
    SO4--
  /
  SECONDARY_SPECIES
    OH-
    CH4
    Al(OH)4-
    Al(OH)3
    NaAl(OH)4
    Al(OH)2+
    HCO3-
    CO2 
    Na(HCO3)
    Mg(HCO3)+
    CaCO3
    Na(CO3)-
    FeCO3
    Fe(OH)CO3
    Ca(SO4)
    Ca(HCO3)+
    MgCl+
    Fe+++
    FeCl+
    Fe(SO4)
    Fe(OH)+
    Fe(OH)2+
    Fe(OH)3
    Fe(CO3)2--
    H2(aq)
    Mg(SO4)
    Mg(CO3)
    U++++
    Ca2UO2(CO3)3
    CaUO2(CO3)3--
    UO2(CO3)3----
    MgUO2(CO3)3--
    Mg2UO2(CO3)3
    UO2(CO3)2--
    UO2(CO3)
    UO2(OH)+
    UO2(OH)2
    U(OH)4
    UO2+
    HS-
    H2S
    Fe(HS)+
    SO3--
    S2O3--
    Na(S2O3)-
    Mg(S2O3)
    Ca(S2O3)
    H(SO3)-
    H(SO4)-
  /
  
  PASSIVE_GAS_SPECIES
    O2(g)
  /
  
  MINERALS
    InertMineral
    UO2:2H2O(am)
  /

  ! Kinetics data from Palandri and Kharaka (2004) and Marty et al. (2015)
    
  MINERAL_KINETICS
    InertMineral
      RATE_CONSTANT   0.0 mol/m^2-sec
    /       
    UO2:2H2O(am)
      RATE_CONSTANT 1e-9
    / 
  /
    
  DATABASE ./PFLOTRAN_O2_ThermoChimie_v12a_T_modified.dat
  
  LOG_FORMULATION
  
  OUTPUT
    ALL
    PH
    PE
    KD
    TOTAL
    SECONDARY_SPECIES
    TOTAL_SORBED
    MOLARITY
  /

END

GRID
  TYPE UNSTRUCTURED ../../mesh/output_test_hr/mesh.h5
END

FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.d-9 
END

MATERIAL_PROPERTY source
  ID 2
  POROSITY 0.01
  TORTUOSITY 1.0
  LONGITUDINAL_DISPERSIVITY 0.1
  PERMEABILITY
    PERM_ISO 1.d-20 ! unit: m^2
  /
  CHARACTERISTIC_CURVES default
END

MATERIAL_PROPERTY bentonite
  ID 1
  POROSITY 0.42
  TORTUOSITY 1.0
  LONGITUDINAL_DISPERSIVITY 0.1
  PERMEABILITY
    PERM_ISO 1.d-19 ! unit: m^2
  /
  CHARACTERISTIC_CURVES default
END

CHARACTERISTIC_CURVES default
  DEFAULT
END

OUTPUT
  SNAPSHOT_FILE
    PERIODIC TIME 10 yr
    FORMAT HDF5
    VARIABLES
      POROSITY
      PERMEABILITY
      VOLUME
    /
  /
END

TIME
  FINAL_TIME 30 yr
END

REGION all
  COORDINATES
    -5.d0 -5.d0 -5.d0
    5.d0 5.d0 5.d0
  /
END

REGION bentonite
  FILE ../../mesh/output_test_hr/material_1.txt
END

REGION source 
  FILE ../../mesh/output_test_hr/material_2.txt
END

FLOW_CONDITION initial_pressure
  TYPE
    LIQUID_PRESSURE DIRICHLET
  /
  LIQUID_PRESSURE 501325.d0 ! unit: Pa
END

TRANSPORT_CONDITION BENTONITE_TC
  TYPE DIRICHLET_ZERO_GRADIENT
  CONSTRAINT_LIST
    0.d0 bentonite_conc
  /
END

TRANSPORT_CONDITION SOURCE_TC
  TYPE DIRICHLET_ZERO_GRADIENT
  CONSTRAINT_LIST
    0.d0 source_conc
  /
END

INITIAL_CONDITION BENTONITE
  FLOW_CONDITION initial_pressure
  TRANSPORT_CONDITION BENTONITE_TC
  REGION bentonite
END

INITIAL_CONDITION SOURCE
  FLOW_CONDITION initial_pressure
  TRANSPORT_CONDITION SOURCE_TC
  REGION source
END

CONSTRAINT bentonite_conc
  ACKNOWLEDGE_ZERO_SURFACE_AREA
  CONCENTRATIONS
    H+		6.835764	    pH
    CO3--	0.002026657	  T
    Ca++ 	0.02312668	  T
    Cl-		0.1392766	    Z
    Fe++	0.00003310075	T
    K+		0.000875	    T
    Mg++	0.00930007	  T
    Na+		0.0888	      T
    SO4--	0.00680009 	T
    H4(SiO4)	0.0002337517	T
    Al+++	0.00000001350717			T
    UO2++	1.000104E-16			T
    O2(aq)	-2.629056	PE
  /
  MINERALS
    InertMineral	0.52  0.0 	m^2/m^3
    UO2:2H2O(am)	0.0   0.0 	m^2/m^3
  /
/	

CONSTRAINT source_conc
  ACKNOWLEDGE_ZERO_SURFACE_AREA
  CONCENTRATIONS
    H+		6.835764	    pH
    CO3--	0.002026657	  T
    Ca++ 	0.02312668	  T
    Cl-		0.1392766	    Z
    Fe++	0.00003310075	T
    K+		0.000875	    T
    Mg++	0.00930007	  T
    Na+		0.0888	      T
    SO4--	0.00680009 	T
    H4(SiO4)	0.0002337517	T
    Al+++	0.00000001350717			T
    UO2++	1.000104E-16			M UO2:2H2O(am)
    O2(aq)	-2.629056	PE
  /
  MINERALS
    InertMineral	0.94  0.0   m^2/m^3
    UO2:2H2O(am)	0.05  0.05  m^2/g
  /
/	
  
STRATA
  FILE ../../mesh/output_test_hr/mesh.h5
END
